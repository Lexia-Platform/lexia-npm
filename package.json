{
  "name": "@lexia/sdk",
  "version": "1.0.3",
  "description": "Clean, minimal package for Lexia platform integration",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "scripts": {
    "test": "jest",
    "build": "npm run build:types",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir .",
    "prepublishOnly": "npm run build",
    "format": "prettier --write \"src/**/*.js\"",
    "lint": "eslint src/**/*.js"
  },
  "keywords": [
    "lexia",
    "ai",
    "chatbot",
    "platform",
    "integration",
    "express",
    "real-time"
  ],
  "author": "Lexia Team <support@lexiaplatform.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Xalantico/lexia-npm.git"
  },
  "bugs": {
    "url": "https://github.com/Xalantico/lexia-npm/issues"
  },
  "homepage": "https://github.com/Xalantico/lexia-npm#readme",
  "dependencies": {
    "axios": "^1.6.0",
    "express": "^4.18.0"
  },
  "peerDependencies": {
    "express": "^4.18.0"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "typescript": "^5.2.0"
  },
  "files": [
    "src/",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=14.0.0"
  }
